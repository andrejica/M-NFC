<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Start M-NFC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startMnfc"
            app:layout_constraintTop_toBottomOf="@+id/title_mnfc"
            android:layout_marginTop="80dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="Magnetic-NFC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_mnfc"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="148dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>